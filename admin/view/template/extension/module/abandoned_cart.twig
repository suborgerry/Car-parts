{% extends 'common/dashboard.twig' %}

{% block content %}
	<div class="page-header">
		<div class="container-fluid">
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li>
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_warning }}</div>
		{% endif %}
		{% if success %}
			<div class="alert alert-success">
				<i class="fa fa-check-circle"></i>
				{{ success }}</div>
		{% endif %}
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label class="control-label" for="input-reminder-1">{{ entry_reminder_1 }}</label>
					<input type="text" name="module_abandoned_cart_reminder_1" value="{{ module_abandoned_cart_reminder_1 }}" placeholder="{{ entry_reminder_1 }}" id="input-reminder-1" class="form-control"/>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label class="control-label" for="input-reminder-2">{{ entry_reminder_2 }}</label>
					<input type="text" name="module_abandoned_cart_reminder_2" value="{{ module_abandoned_cart_reminder_2 }}" placeholder="{{ entry_reminder_2 }}" id="input-reminder-2" class="form-control"/>
				</div>
			</div>
		</div>
		{% if error_reminder_1 %}
			<div class="alert alert-danger">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_reminder_1 }}</div>
		{% endif %}
		{% if error_reminder_2 %}
			<div class="alert alert-danger">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_reminder_2 }}</div>
		{% endif %}
		<div class="buttons">
			<div class="pull-right">
				<button type="submit" form="form-abandoned-cart" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
					<i class="fa fa-save"></i>
				</button>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		$(document).ready(function () {
$('input[name="module_abandoned_cart_reminder_1"], input[name="module_abandoned_cart_reminder_2"]').on('input', function () {
$(this).val($(this).val().replace(/[^0-9]/g, ''));
});
});
	</script>
{% endblock %}
